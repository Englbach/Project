<?xml version="1.0" encoding="UTF-8" ?>
<resources>

	<style name="PrimaryThemes" parent="Theme.AppCompat.Light">

		<item name="windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="colorPrimary">#E53935</item>
		<item name="colorPrimaryDark">#D32F2F</item>

	</style>

	<!--TabLayout Theme-->

	<style name="TabLayoutThemes" parent="Widget.Design.TabLayout">

		<item name="tabIndicatorColor">#FFFFFF</item>
		<item name="tabIndicatorHeight">2dp</item>
		<item name="tabSelectedTextColor">#212121</item>


	</style>

	<style name="TabLayoutThemes1" parent="Widget.Design.TabLayout">

		<item name="tabIndicatorColor">#F5F5F5</item>
		<item name="tabIndicatorHeight">2dp</item>
		<item name="tabSelectedTextColor">#212121</item>


	</style>

	<style name="MyTheme.Splash" parent ="Theme.AppCompat.Light">
	    <item name="android:windowBackground">@drawable/backgroundscreen</item>
	    <item name="android:windowNoTitle">true</item>  
  	</style>


  	<style name="Widget.SeekBar.Normal" parent="android:Widget.Material.Light.SeekBar">  
        <item name="android:maxHeight">8.0dip</item>  
        <item name="android:indeterminateOnly">false</item>  
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>  

        <item name="android:minHeight">8.0dip</item>  
        <item name="android:thumb">@drawable/seekthumb</item>  
        <item name="android:thumbOffset">10.0dip</item>  
   </style>  

</resources>


